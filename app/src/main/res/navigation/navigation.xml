<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainScreen">
    <fragment
        android:id="@+id/mainScreen"
        tools:layout="@layout/screen_main"
        android:name="uz.gita.cartoonapp.presentation.screens.MainScreen"
        android:label="MainScreen" >
        <action
            android:id="@+id/action_mainScreen_to_webScreen"
            app:destination="@id/webScreen" />
    </fragment>
    <fragment
        android:id="@+id/webScreen"
        android:name="uz.gita.cartoonapp.presentation.screens.WebScreen"
        android:label="WebScreen" />
    <fragment
        android:id="@+id/swipeScreen"
        android:name="uz.gita.cartoonapp.presentation.screens.SwipeScreen"
        android:label="SwipeScreen" />
</navigation>